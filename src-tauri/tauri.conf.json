{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DevTools",
  "version": "0.1.0",
  "identifier": "com.devtools.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DevTools",
        "width": 1000,
        "height": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/logo.png",
      "icons/logo.svg"
    ],
    "resources": [
      "resources/"
    ]
  }
}